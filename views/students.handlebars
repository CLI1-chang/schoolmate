    <center>
    <h1>Student Info</h1>
        <div class="container">
            <div class="form">
            <form id="addperson" action="/students" method="post">
                First Name :<input type="text" name="first_name" id="first_name" width=100><br />
                Last  Name :<input type="text" name="last_name" id="last_name" width=100><br />
                
                <input type="submit" value="Add">
                
            </form>
            </div>
            <br />
            <br />
            <div class="tab tab-2">
                <h3>Current Students:</h3>
                <table id="table" border="1">
                    <thead>
                        <th>Student ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Delete</th>
                        <th>Update</th>
                    </thead>
                    <tbody>
                        {{#each students}} 
                        <tr>
                            <td>{{id}}</td>
                            <td>{{first_name}}</td> 
                            <td>{{last_name}}</td> 
                            <td><button onclick="deletePerson({{id}})">Delete</button></td>
                            <td><a href="/students/{{id}}">Update</a></td>
                        </tr> 
                        {{/each}} 
                    </tbody>
                </table> 
            </div>
