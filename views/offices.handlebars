    <center>
    <h1>Office Info</h1>
        <div class="container">
            <form id="addoffice" action="/offices" method="post">
                Office ID :<input type="number" name="office_id" id="office_id"><br />
                Building Name :<input type="text" name="build_name" id="build_name"><br />
                ZipCode :<input type="number" name="zipcode" id="zipcode"><br />
                
                <input type="submit" value="Add">
                
            </form>
            <br />
            <br />

            <div class="tab tab-2">
                <h3>Current Offices:</h3>
                <table id="table" border="1">
                    <thead>
                        <th>Office ID</th>
                        <th>Building Name</th>
                        <th>Zipcode</th>
                        <th>Delete</th>
                        <th>Update</th>
                    </thead>
                    <tbody>
                        {{#each offices}} 
                        <tr> 
                            <td>{{id}}</td> 
                            <td>{{building_name}}</td> 
                            <td>{{zipcode}}</td> 
                            <td><button onclick="deleteOffice({{id}})">Delete</button></td>
                            <td><a href="/offices/{{id}}">Update</a></td>
                        </tr> 
                        {{/each}} 
                    </tbody>
                </table>

                
